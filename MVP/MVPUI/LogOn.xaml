<?xml version="1.0" encoding="utf-8" ?>
<ContentPage BackgroundColor="{StaticResource BlueBackgroundColor}" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Microsoft.Mvpui.LogOn">
    <ContentPage.Content>
        <Grid>
            <StackLayout VerticalOptions="CenterAndExpand" Margin="0,-80,0,0">
                <Image HeightRequest="200">
                    <Image.Source>
                        <OnPlatform x:TypeArguments="ImageSource">
                            <On Platform="iOS" Value="image_mvplogo.png" />
                            <On Platform="Android" Value="image_mvplogo.png" />
                            <On Platform="Windows" Value="Assets\image_mvplogo.png" />
                        </OnPlatform>
                    </Image.Source>
                </Image>

                <Button TextColor="White"
                        BorderColor="White"
                        BackgroundColor="{StaticResource PrimaryDark}"
                        BorderRadius="5"
                        BorderWidth="2"
                        Clicked="ButtonSignIn_Clicked"
                        Text="Sign in"
                        FontSize="Medium" 
                        FontAttributes="Bold"
                        WidthRequest="150" 
                        HorizontalOptions="Center"/>

            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>